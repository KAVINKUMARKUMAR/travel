  font-style: normal;
  color: #555;
  font-size: 0.95rem;
  line-height: 1.3;
}

/* Main form area - two columns on desktop */
.payment-main {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 28px;
}

