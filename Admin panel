.link-button {
  background: none;
  border: none;
  color: var(--primary-color);
  cursor: pointer;
  text-decoration: underline;
  font-weight: 600;
  font-size: 1rem;
  padding: 0;
}

.link-button:hover {
  color: #4338ca;
}

.search-input {
  width: 300px;
  padding: 9px 12px;
