/* Bookings Section */

.bookings-section {
  padding: 24px 36px;
  overflow-y: auto;
  flex-grow: 1;
}

.filters {
  display: flex;
  gap: 14px;
  margin-bottom: 16px;
  flex-wrap: wrap;
}

