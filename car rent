        },
      ],
      isFulfillmentCenter: false,
    },
    {
      id: 3,
      name: "Mahindra XUV 500",
      imageUrl:
        "https://cdn.zoomcar.com/photographer/car/cars/mahindra-xuv500.1573106743.png",
      carType: "SUV",
      seats: 7,
      ac: true,
      luggage: 5,
      baseFarePerDay: 3500,
      taxes: 600,
      insurance: 300,
      rating: 4.7,
      reviewsCount: 57,
      reviews: [
        {
          userInitials: "BR",
