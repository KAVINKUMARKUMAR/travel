export default function HotelPage() {
  const [mainImageIndex, setMainImageIndex] = useState(0);

  // Booking form state:
  const [checkIn, setCheckIn] = useState('');
  const [checkOut, setCheckOut] = useState('');
  const [adults, setAdults] = useState(2);
  const [children, setChildren] = useState(0);

  const handlePrevImage = () => {
    setMainImageIndex((prev) => (prev === 0 ? images.length - 1 : prev - 1));
  };

  const handleNextImage = () => {
    setMainImageIndex((prev) => (prev === images.length - 1 ? 0 : prev + 1));
  };

  const handleThumbnailClick = (index) => {
    setMainImageIndex(index);
  };

  return (
    <div className="hotel-container">
      {/* Image Gallery */}
      <section className="hotel-gallery" aria-label="Hotel image gallery">
        <div className="main-image-wrap">
          <button
            className="nav-arrow left-arrow"
            aria-label="Previous Image"
            onClick={handlePrevImage}
            type="button"
          >
            ‹
          </button>
          <img
            key={images[mainImageIndex].url}
            src={images[mainImageIndex].url}
            alt={images[mainImageIndex].alt}
            className="main-image"
          />
          <button
            className="nav-arrow right-arrow"
            aria-label="Next Image"
            onClick={handleNextImage}
            type="button"
          >
            ›
          </button>
        </div>
        <div className="thumbnail-row" role="list">
          {images.map((img, idx) => (
            <button
              key={img.url}
              className={`thumbnail-button ${
                idx === mainImageIndex ? 'active' : ''
              }`}
              onClick={() => handleThumbnailClick(idx)}
              type="button"
              aria-label={`View image ${idx + 1}`}
              role="listitem"
            >
              <img src={img.url} alt={img.alt} className="thumbnail-image" />
            </button>
          ))}
        </div>
      </section>

      <div className="hotel-content-wrapper">
        <main className="hotel-main-content">
          {/* Hotel Overview */}
          <section className="hotel-overview">
            <h1 className="hotel-title">Coastal Grand Chennai OMR</h1>
            <div className="hotel-stars" aria-label="Hotel star rating">
              {[...Array(4)].map((_, i) => (
                <i key={i} className="star-icon" aria-hidden="true">
                  ★
                </i>
              ))}
            </div>
            <address className="hotel-location">
              <svg
                className="location-icon"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="#FDD835"
                aria-hidden="true"
                focusable="false"
              >
                <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zM7 9a5 5 0 1 1 10 0c0 2.78-2.5 6.85-5 9.88C9.5 15.85 7 11.78 7 9z" />
                <circle cx="12" cy="9" r="2.5" />
              </svg>
              Rajiv Gandhi IT Expressway, Sholinganallur, Chennai, Tamil Nadu 600119, India
            </address>
            <p className="hotel-description">
              Located in the heart of Chennai’s IT corridor, Coastal Grand OMR
              offers premium comforts, modern amenities, and swift access to
              beaches and business hubs.
            </p>
          </section>

          {/* Amenities */}
          <section className="hotel-amenities">
            <h2 className="section-title">Amenities</h2>
            <ul className="amenities-list">
              {amenities.map(({ name, icon }) => (
                <li key={name} className="amenity-item" title={name} aria-label={name}>
                  <span className="amenity-icon" aria-hidden="true">
                    {icon}
                  </span>
                  <span className="amenity-name">{name}</span>
                </li>
              ))}
            </ul>
          </section>

          {/* Room Types */}
          <section className="hotel-rooms">
            <h2 className="section-title">Room Types</h2>
            <div className="room-cards">
              {roomTypes.map(({ id, img, name, capacity, price }) => (
                <article key={id} className="room-card" tabIndex="0" aria-label={`${name} for ${capacity}`}>
                  <img className="room-image" src={img} alt={name} />
                  <div className="room-details">
                    <h3 className="room-name">{name}</h3>
                    <p className="room-capacity">{capacity}</p>
                    <p className="room-price">{price}</p>
                    <button type="button" className="book-button">
                      Book Now
                    </button>
                  </div>
                </article>
              ))}
            </div>
          </section>

          {/* Map & Address */}
          <section className="hotel-map-address">
            <h2 className="section-title">Location & Map</h2>
            <div className="map-container" aria-label="Hotel location on map">
              <iframe
                title="Coastal Grand OMR Location"
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3890.083542316538!2d80.25685381509586!3d12.91734079106439!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3a525daeafec3485%3A0x47941c071622b89f!2sCoastal%20Grand%20OMR!5e0!3m2!1sen!2sin!4v1690442520000!5m2!1sen!2sin"
                width="100%"
                height="280"
                style={{ border: 0, borderRadius: '8px' }}
                allowFullScreen=""
                loading="lazy"
                referrerPolicy="no-referrer-when-downgrade"
              ></iframe>
            </div>
            <address className="address-text">
              Coastal Grand OMR, Rajiv Gandhi IT Expressway, Sholinganallur,
              Chennai - 600119, Tamil Nadu, India.
              <br />
              Near Major IT Parks, 7 Min from ECR Beaches.
            </address>
          </section>

          {/* Reviews Summary */}
          <section className="hotel-reviews">
            <h2 className="section-title">Guest Reviews</h2>
            <div className="reviews-summary" aria-label="Average guest rating">
              <div className="average-rating">
                <span className="rating-number">8.7</span>
                <span className="rating-text">Excellent</span>
              </div>
            </div>
            <ul className="reviews-list">
              {reviews.map(({ id, name, rating, comment }) => (
                <li key={id} className="review-item">
                  <div className="review-header">
                    <strong className="review-author">{name}</strong>
                    <span className="review-stars" aria-label={`${rating} star rating`}>
                      {[...Array(10)].map((_, i) => (
                        <i
                          key={i}
                          className={`star-icon ${i < Math.round(rating) ? 'filled' : ''}`}
                          aria-hidden="true"
                        >
                          ★
                        </i>
                      ))}
                    </span>
                  </div>
                  <p className="review-comment">{comment}</p>
                </li>
              ))}
            </ul>
          </section>
        </main>

        {/* Booking Widget */}
        <aside className="booking-widget" aria-label="Booking form">
          <form onSubmit={(e) => e.preventDefault()} className="booking-form">
            <h2 className="booking-title">Check Availability</h2>

            <label htmlFor="check-in" className="booking-label">
              Check-in
            </label>
            <input
              id="check-in"
              name="check-in"
              type="date"
              value={checkIn}
              onChange={(e) => setCheckIn(e.target.value)}
              className="booking-input"
              required
            />

            <label htmlFor="check-out" className="booking-label">
              Check-out
            </label>
            <input
              id="check-out"
              name="check-out"
              type="date"
              value={checkOut}
              onChange={(e) => setCheckOut(e.target.value)}
              className="booking-input"
              required
            />

            <label htmlFor="adults" className="booking-label">
              Adults
            </label>
            <select
              id="adults"
              name="adults"
              value={adults}
              onChange={(e) => setAdults(Number(e.target.value))}
              className="booking-select"
            >
              {[...Array(5)].map((_, i) => (
                <option key={i + 1} value={i + 1}>
                  {i + 1}
                </option>
              ))}
            </select>

            <label htmlFor="children" className="booking-label">
              Children
            </label>
            <select
              id="children"
              name="children"
              value={children}
              onChange={(e) => setChildren(Number(e.target.value))}
              className="booking-select"
            >
              {[...Array(4)].map((_, i) => (
                <option key={i} value={i}>
                  {i}
                </option>
              ))}
            </select>

            <button type="submit" className="availability-button">
              Check Availability
            </button>
          </form>
        </aside>
      </div>
    </div>
  );
}




